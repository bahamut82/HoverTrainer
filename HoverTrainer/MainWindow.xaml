<Window x:Class="HoverTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoverTrainer"
        mc:Ignorable="d"
        Title="HoverTrainer" Height="140" Width="600" Background="#FF777777" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Label Content="Current Input:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="inputLabel" Content="_____" HorizontalAlignment="Left" Margin="105,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <StackPanel x:Name="stack" Orientation="Horizontal" HorizontalAlignment="Left" Height="40" Width="570" Margin="10,41,0,0" VerticalAlignment="Top" Background="#FF9C9C9C"/>

    </Grid>
</Window>
